# Railway Bucket Configuration (S3-compatible - PRIMARY STORAGE)
# These variables are automatically injected by Railway when you connect service to bucket
# For local development, set these manually from Railway dashboard → Bucket → Credentials
AWS_ENDPOINT_URL="https://your-railway-bucket-endpoint"
AWS_S3_BUCKET_NAME="cvr-bucket"
AWS_DEFAULT_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-railway-access-key-id"
AWS_SECRET_ACCESS_KEY="your-railway-secret-access-key"

# Legacy AWS Configuration (for S3 migration only)
# These are only needed when running the migrate-s3-to-railway.ts script
# Use LEGACY_ prefix to avoid conflicts with Railway's injected variables
LEGACY_AWS_REGION="us-east-1"
LEGACY_AWS_ACCESS_KEY_ID="your-original-aws-access-key-id"
LEGACY_AWS_SECRET_ACCESS_KEY="your-original-aws-secret-access-key"
LEGACY_S3_BUCKET_NAME="your-original-aws-s3-bucket-name"

# Firebase Configuration (Client-side - must start with NEXT_PUBLIC_)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="123456789"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin Configuration (Server-side)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----"

# NextAuth.js (can be removed if not using)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Optional: Email service (for contact forms)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Admin Credentials (for Firebase admin user creation)
ADMIN_EMAIL="admin@clearviewretreat.org"
ADMIN_PASSWORD="your_secure_password_here"

# Optional: Email service (for contact forms)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
